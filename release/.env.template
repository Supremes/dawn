# Fatcat Blog Platform - Environment Variables Template
# Copy this file to .env and update the values as needed

# Database Configuration
MYSQL_ROOT_PASSWORD=your_secure_root_password
MYSQL_DATABASE=fatcat
MYSQL_USER=fatcat
MYSQL_PASSWORD=your_secure_mysql_password
MYSQL_PORT=3306

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password
REDIS_PORT=6379

# RabbitMQ Configuration
RABBITMQ_USER=fatcat_user
RABBITMQ_PASSWORD=your_secure_rabbitmq_password
RABBITMQ_VHOST=fatcat
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# Elasticsearch Configuration
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_TRANSPORT_PORT=9300

# MinIO Configuration
MINIO_ROOT_USER=fatcat_admin
MINIO_ROOT_PASSWORD=your_secure_minio_password
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_BROWSER_REDIRECT_URL=http://localhost:9001

# Fatcat Application Configuration
SPRING_PROFILES_ACTIVE=prod
FATCAT_PORT=8080
FATCAT_DEBUG_PORT=5005
FATCAT_ADMIN_PORT=8081

# Nginx Configuration
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
NGINX_ADMIN_PORT=8888
